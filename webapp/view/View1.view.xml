<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
          controllerName="infy.com.controller.View1">
    <Page id="idPage1" title="View 1">
        <!-- <headerContent>
            <Button icon="sap-icon://action" press="onNext"></Button>
        </headerContent> -->
        <content>
            <SearchField id="idSearch" search="onSearch" liveChange="onSearch"></SearchField>
            <List id="idMyList" items="{/fruits}" mode="SingleSelectMaster" 
                  selectionChange="onItemSelect" delete="onItemDelete">
                <headerToolbar>
                    <Toolbar >
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button icon="sap-icon://delete" press="onItemsDelete" tooltip="Delete the selected item"></Button>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem intro="{type}" title="{name}" number="{price}" numberUnit="{currency}"
                                    icon="{imageURL}">
                        <firstStatus>
                            <ObjectStatus text="{status}" state="{path:'status', formatter:'.formatter.getStatus'}"></ObjectStatus>
                        </firstStatus>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>